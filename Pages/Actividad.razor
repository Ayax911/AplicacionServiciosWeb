@page "/actividad"
@inject Servicios.ServiciosEntregable EntregableService
@inject Servicios.ServiciosActividad serviciosActividad
@inject IJSRuntime JSRuntime

<h3 class="mb-2">Gestión de Actividades</h3>
<p>Administra las actividades asociadas a los entregables</p>

@* ========================== DETALLE DE LA ACTIVIDAD ========================== *@
@if (MostrarDetalle)
{
    <div class="card">
        <div class="detalle-header d-flex align-items-center justify-content-between">
            <div class="d-flex align-items-center gap-3">
                <div class="avatar-circle-large">
                    @ObtenerIniciales(actividadSeleccionada.Titulo)
                </div>
                <div>
                    <h5 class="mb-0 text-white fw-bold">@actividadSeleccionada.Titulo</h5>
                    <p class="mb-0 text-white opacity-75">@actividadSeleccionada.CodigoEntregable</p>
                </div>
            </div>
            <button class="btn btn-close-white" @onclick="() => MostrarDetalle = false">
                <i class="bi bi-x-lg"></i>
            </button>
        </div>

        <div class="card-body">
            <div class="d-flex justify-content-center text-center gap-5 m-5">
                <div>
                    <label class="d-block mb-2">Entregable</label>
                    <strong>@actividadSeleccionada.TituloEntregable</strong>
                </div>
                <div>
                    <label class="d-block mb-2">Código Entregable</label>
                    <strong>@actividadSeleccionada.CodigoEntregable</strong>
                </div>
                <div>
                    <label class="d-block mb-2">Fecha Inicio</label>
                    <strong>@actividadSeleccionada.FechaInicio.ToString("dd/MM/yyyy")</strong>
                </div>
                <div>
                    <label class="d-block mb-2">Fecha Fin Prevista</label>
                    <strong>@actividadSeleccionada.FechaFinPrevista.ToString("dd/MM/yyyy")</strong>
                </div>
            </div>

            <div class="mb-4">
                <label class="detalle-label mb-3">Descripción</label>
                <div class="info-card">
                    <p class="mb-0">@actividadSeleccionada.Descripcion</p>
                </div>
            </div>

            @if (actividadSeleccionada.FechaModificacion != null)
            {
                <div class="mb-3">
                    <label class="d-block mb-2 text-muted">Última Modificación</label>
                    <strong>@actividadSeleccionada.FechaModificacion?.ToString("dd/MM/yyyy")</strong>
                </div>
            }

            @if (actividadSeleccionada.FechaFinalizacion != null)
            {
                <div class="mb-3">
                    <label class="d-block mb-2 text-muted">Fecha Finalización</label>
                    <strong>@actividadSeleccionada.FechaFinalizacion?.ToString("dd/MM/yyyy")</strong>
                </div>
            }

            <div class="border-bottom mb-3"></div>

            <div class="d-flex justify-content-center gap-5">
                <button class="btn btn-primary" style="width: 300px" @onclick="() => EditarActividad(actividadSeleccionada)">
                    <i class="bi bi-pencil"></i> Editar
                </button>
                <button class="btn btn-danger" style="width: 200px" @onclick="() => EliminarActividad(actividadSeleccionada)">
                    <i class="bi bi-trash"></i> Eliminar
                </button>
            </div>
        </div>
    </div>
}

@* ========================== FORMULARIO ========================== *@
else if (MostrarFormulario)
{
    <div class="modal-overlay" @onclick="() => MostrarFormulario = false">
        <div class="form-card" @onclick:stopPropagation="true">
            <div class="form-header d-flex justify-content-between align-items-center">
                <div>
                    <h4 class="mb-1 fw-bold">@((actividadEditando?.Id > 0) ? "Editar Actividad" : "Nueva Actividad")</h4>
                    <p class="mb-0 text-muted">Complete la información de la actividad</p>
                </div>
                <button class="btn-close-icon" @onclick="() => MostrarFormulario = false">
                    <i class="bi bi-x-lg"></i>
                </button>
            </div>

            <div class="form-body">
                <div class="mb-4">
                    <label class="form-label-custom">Título <span class="text-danger">*</span></label>
                    <input type="text" class="form-control-custom" placeholder="Ingrese el título" @bind="actividadEditando.Titulo" />
                </div>

                <div class="mb-4">
                    <label class="form-label-custom">Descripción</label>
                    <textarea class="form-control-custom" rows="3" placeholder="Ingrese la descripción" @bind="actividadEditando.Descripcion"></textarea>
                </div>

                <div class="mb-4">
                    <label class="form-label-custom">Entregable Asociado <span class="text-danger">*</span></label>
                    <select class="form-control-custom" @bind="actividadEditando.IdEntregable">
                        <option value="0">Seleccione un entregable</option>
                        @foreach (var entregable in entregables)
                        {
                            <option value="@entregable.Id">@entregable.Titulo</option>
                        }
                    </select>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <label class="form-label-custom">Fecha Inicio</label>
                        <input type="date" class="form-control-custom" @bind="actividadEditando.FechaInicio" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label-custom">Fecha Fin Prevista</label>
                        <input type="date" class="form-control-custom" @bind="actividadEditando.FechaFinPrevista" />
                    </div>
                </div>
            </div>

            <div class="form-footer d-flex justify-content-end gap-3">
                <button class="btn btn-primary btn-lg" @onclick="GuardarActividad">
                    <i class="bi bi-check-lg me-2"></i> Guardar
                </button>
                <button class="btn btn-secondary btn-lg" @onclick="() => MostrarFormulario = false">
                    <i class="bi bi-x-lg me-2"></i> Cancelar
                </button>
            </div>
        </div>
    </div>
}

@* ========================== LISTADO ========================== *@
else
{
    <div class="mb-3">
        <div class="card">
            <div class="card-body">
                <div class="search-container">
                    <input type="text" class="search-input" placeholder="Buscar actividades..." @bind="busqueda" @bind:event="oninput" />
                    <i class="bi bi-search search-icon"></i>
                </div>

                <div class="d-flex align-items-center mt-2 gap-3">
                    <button class="btn btn-primary ms-auto" @onclick="NuevaActividad">
                        <i class="bi bi-plus"></i> Agregar Actividad
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-body p-0">
            <table class="table table-custom table-hover">
                <thead class="table-header-custom">
                    <tr>
                        <th>Título</th>
                        <th>Entregable</th>
                        <th>Fecha Inicio</th>
                        <th>Fecha Fin Prevista</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var act in ActividadesFiltradas())
                    {
                        <tr>
                            <td>@act.Titulo</td>
                            <td>@act.TituloEntregable</td>
                            <td>@act.FechaInicio.ToString("dd/MM/yyyy")</td>
                            <td>@act.FechaFinPrevista.ToString("dd/MM/yyyy")</td>
                            <td>
                                <div class="d-flex gap-2">
                                    <button class="btn-action btn-action-view" title="Ver detalles" @onclick="() => VerDetalle(act)">
                                        <i class="bi bi-eye"></i>
                                    </button>
                                    <button class="btn-action btn-action-edit" title="Editar" @onclick="() => EditarActividad(act)">
                                        <i class="bi bi-pencil"></i>
                                    </button>
                                    <button class="btn-action btn-action-delete" title="Eliminar" @onclick="() => EliminarActividad(act)">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Mensaje))
    {
        <div class="alert alert-info mt-3" role="alert">@Mensaje</div>
    }
}

@code {
    private List<Models.DTOActividad> actividades = new();
    private List<Models.Entregable> entregables = new();
    private Models.DTOActividad actividadSeleccionada = new();
    private Models.DTOActividad? actividadEditando;
    private bool MostrarDetalle = false;
    private bool MostrarFormulario = false;
    private string busqueda = string.Empty;
    private string Mensaje = string.Empty;

    protected override async Task OnInitializedAsync() => await CargarDatos();

    private async Task CargarDatos()
    {
        try
        {
            actividades = await serviciosActividad.ObtenerActividadesAsync();
            entregables = (await EntregableService.GetEntregables()).ToList();


        }
        catch (Exception ex)
        {
            Mensaje = $"Error al cargar los datos: {ex.Message}";
        }
    }

    private List<Models.DTOActividad> ActividadesFiltradas()
    {
        if (string.IsNullOrWhiteSpace(busqueda))
            return actividades;

        return actividades.Where(a =>
            a.Titulo.Contains(busqueda, StringComparison.OrdinalIgnoreCase) ||
            (a.Descripcion?.Contains(busqueda, StringComparison.OrdinalIgnoreCase) ?? false) ||
            (a.TituloEntregable?.Contains(busqueda, StringComparison.OrdinalIgnoreCase) ?? false)
        ).ToList();
    }

    private void VerDetalle(Models.DTOActividad act)
    {
        actividadSeleccionada = act;
        MostrarDetalle = true;
    }

    private void NuevaActividad()
    {
        actividadEditando = new Models.DTOActividad
        {
            FechaInicio = DateTime.Now,
            FechaFinPrevista = DateTime.Now.AddDays(7)
        };
        MostrarFormulario = true;
    }

    private void EditarActividad(Models.DTOActividad act)
    {
        actividadEditando = act;
        MostrarDetalle = false;
        MostrarFormulario = true;
    }

    private async Task GuardarActividad()
    {
        try
        {
            int id = actividadEditando?.Id ?? 0;
            int idEntregable = actividadEditando?.IdEntregable ?? 0;
            string titulo = actividadEditando?.Titulo ?? string.Empty;
            string descripcion = actividadEditando?.Descripcion ?? string.Empty;
            DateTime fechaInicio = actividadEditando?.FechaInicio ?? DateTime.Now;
            DateTime fechaFinPrevista = actividadEditando?.FechaFinPrevista ?? DateTime.Now.AddDays(7);

            bool resultado = await serviciosActividad.GuardarActividadAsync(id, idEntregable, titulo, descripcion, fechaInicio, fechaFinPrevista);
            if (resultado)
            {
                Mensaje = "Actividad guardada correctamente.";
                MostrarFormulario = false;
                await CargarDatos();
            }
            else
            {
                Mensaje = "Error al guardar la actividad.";
            }
        }
        catch (Exception ex)
        {
            Mensaje = $"Error: {ex.Message}";
        }
    }

    private async Task EliminarActividad(Models.DTOActividad act)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", $"¿Está seguro de eliminar '{act.Titulo}'?"))
        {
            try
            {
                bool resultado = await serviciosActividad.EliminarActividadAsync(act.Id);
                Mensaje = resultado ? "Actividad eliminada correctamente." : "Error al eliminar la actividad.";
                if (resultado)
                {
                    MostrarDetalle = false;
                    await CargarDatos();
                }
            }
            catch (Exception ex)
            {
                Mensaje = $"Error: {ex.Message}";
            }
        }
    }

    private string ObtenerIniciales(string texto)
    {
        if (string.IsNullOrWhiteSpace(texto))
            return "??";

        var partes = texto.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        return partes.Length switch
        {
            1 => partes[0].Substring(0, Math.Min(2, partes[0].Length)).ToUpper(),
            _ => string.Concat(partes[0][0], partes[1][0]).ToUpper()
        };
    }
}
