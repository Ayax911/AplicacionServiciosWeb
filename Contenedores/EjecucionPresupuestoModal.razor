@using BlazorApp1.Models.DTO

@if (IsModalVisible)
{
    <div class="position-fixed top-0 start-0 w-100 h-100 bg-dark bg-opacity-50
                    d-flex justify-content-center align-items-center"
         style="z-index: 1050;">
        <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content shadow-lg">
                    <div class="modal-header bg-primary text-white">
                        <h5 class="modal-title">
                            <i class="bi bi-calculator me-2"></i>@Title
                        </h5>
                        <button type="button" class="btn-close btn-close-white" @onclick="CloseModal"></button>
                    </div>

                    <div class="modal-body">
                        <EditForm Model="@ejecucionPresupuesto" OnValidSubmit="@Metodo">
                            <DataAnnotationsValidator />
                            <ValidationSummary class="text-danger" />

                            <!-- Selección de Presupuesto -->
                            <div class="mb-3">
                                <label for="presupuesto" class="form-label">
                                    Presupuesto <span class="text-danger">*</span>
                                </label>
                                <select id="presupuesto"
                                        class="form-select"
                                        @bind="ejecucionPresupuesto.IdPresupuesto">
                                    <option value="0">-- Seleccione un presupuesto --</option>
                                    @foreach (var presupuesto in Presupuestos)
                                    {
                                        <option value="@presupuesto.Id">
                                            @presupuesto.TituloProyecto - Año @presupuesto.PeriodoAnio
                                        </option>
                                    }
                                </select>
                                <ValidationMessage For="@(() => ejecucionPresupuesto.IdPresupuesto)" class="text-danger" />
                            </div>

                            <!-- Año -->
                            <div class="mb-3">
                                <label for="anio" class="form-label">
                                    Año <span class="text-danger">*</span>
                                </label>
                                <input type="number"
                                       id="anio"
                                       class="form-control"
                                       @bind="ejecucionPresupuesto.Anio"
                                       min="2000"
                                       max="2100" />
                                <ValidationMessage For="@(() => ejecucionPresupuesto.Anio)" class="text-danger" />
                            </div>

                            <!-- Monto Planeado -->
                            <div class="mb-3">
                                <label for="montoPlaneado" class="form-label">
                                    Monto Planeado <span class="text-danger">*</span>
                                </label>
                                <input type="number"
                                       id="montoPlaneado"
                                       class="form-control"
                                       @bind="ejecucionPresupuesto.MontoPlaneado"
                                       step="0.01"
                                       min="0" />
                                <ValidationMessage For="@(() => ejecucionPresupuesto.MontoPlaneado)" class="text-danger" />
                            </div>

                            <!-- Monto Ejecutado -->
                            <div class="mb-3">
                                <label for="montoEjecutado" class="form-label">
                                    Monto Ejecutado <span class="text-danger">*</span>
                                </label>
                                <input type="number"
                                       id="montoEjecutado"
                                       class="form-control"
                                       @bind="ejecucionPresupuesto.MontoEjecutado"
                                       step="0.01"
                                       min="0" />
                                <ValidationMessage For="@(() => ejecucionPresupuesto.MontoEjecutado)" class="text-danger" />
                            </div>

                            <!-- Observaciones -->
                            <div class="mb-3">
                                <label for="observaciones" class="form-label">Observaciones</label>
                                <textarea id="observaciones"
                                          class="form-control"
                                          rows="3"
                                          @bind="ejecucionPresupuesto.Observaciones"></textarea>
                            </div>

                            <div class="modal-footer">
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-check-lg me-2"></i> Guardar
                                </button>
                                <button type="button" class="btn btn-secondary" @onclick="CloseModal">
                                    <i class="bi bi-x-lg me-2"></i> Cancelar
                                </button>
                            </div>
                        </EditForm>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@code {
    /// <summary>Título del modal</summary>
    [Parameter] public string? Title { get; set; }

    /// <summary>Modelo actual de ejecución presupuesto</summary>
    [Parameter] public DTOEjecucionPresupuesto? ejecucionPresupuesto { get; set; }

    /// <summary>Indica si el modal está visible</summary>
    [Parameter] public bool IsModalVisible { get; set; }

    /// <summary>Lista de presupuestos disponibles</summary>
    [Parameter] public List<DTOPresupuesto> Presupuestos { get; set; } = new();

    /// <summary>Método que se ejecuta al enviar el formulario</summary>
    [Parameter] public Func<Task>? Metodo { get; set; }

    /// <summary>Cierra el modal</summary>
    public void CloseModal()
    {
        IsModalVisible = false;
        StateHasChanged();
    }
}
