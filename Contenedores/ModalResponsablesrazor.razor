 @using Models
<!-- Modal -->
@if (IsModalVisible)
{
    <div class="position-fixed top-0 start-0 w-100 h-100 bg-dark bg-opacity-50
                d-flex justify-content-center align-items-center">
        <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content shadow-lg">
                    <div class="modal-header bg-primary text-white">
                        <h5 class="modal-title">@Title</h5>
                        <button type="button" class="btn-close btn-close-white" @onclick="CloseModal"></button>
                    </div>

                    <div class="modal-body">
                        <EditForm Model="@Tresponsable" OnValidSubmit="@Metodo">
                            <!--AQUI se activa el validador de los dataanotations-->
                            <DataAnnotationsValidator />
                            <ValidationSummary />
                            <!-- las etiquetas en azul son etiquetas html y las verdes son de boostrap-->
                            <div class="mb-3">
                                <label for="Tipo" class="form-label">Tipo</label>
                                <InputText id="Tipo" typeof="text" class="form-control" @bind-Value="Tresponsable.Titulo" />
                            </div>
                            <!--dependiendo del tipo de texto se usa una etiqueta diferente
                                y se especifica su tipo de ser necesario (mirar type) -->
                            <div class="mb-3">
                                <label for="Descripcion" class="form-label">Descripción</label>
                                <InputText id="Descripcion" class="form-control" @bind-Value="Tresponsable.Descripcion" />
                            </div>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-primary">Confirmar</button>
                                <button type="button" class="btn btn-secondary" @onclick="CloseModal">Cerrar</button>
                            </div>
                        </EditForm>
                    </div>
                </div>
            </div>
        </div>
    </div>

}

@code {
    [Parameter]
    public string Title
    {
        get; set;
    }
    [Parameter]
    public TipoResponsable Tresponsable
    {
        get; set;
    }
    [Parameter]
    public bool IsModalVisible
    {
        get; set;
    }
    //parametro que recibe un metodo asincrono
    [Parameter]
    public Func<Task> Metodo
    {
        get; set;
    }

    public void CloseModal()
    {
        IsModalVisible = false;
        StateHasChanged();
    }
}
